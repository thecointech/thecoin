{
  "npmClient": "yarn",
  "version": "0.5.2",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": [
        "publish/*",
        "main",
        "dev"
      ]
    },
    "version": {
      "noChangelog": true,
      "allowBranch": [
        "publish/*",
        "main",
        "dev",
        "release/*"
      ],
      "createRelease": "github",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.test.*",
        "**/*.md"
      ],
      "message": "chore(release): publish %s [skip-release-action]"
    }
  }
}
