{
  "packages": [
    "libs/*",
    "apps/*",
    "apis/**/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "0.2.0",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "master"
    },
    "version": {
      "allowBranch": [
        "release",
        "dev"
      ],
      "message": "chore(release): publish %s"
    }
  }
}
