{
  "name": "@thecointech/contract-plugins",
  "version": "0.2.106",
  "description": "The Coin: Plugin functionality for contract-core",
  "type": "module",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/contract-plugins"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prepublishOnly": "rimraf ./build/.buildinfo",
    "build": "run-s build:contracts build:copy build:src",
    "build:contracts": "yarn _hardhat ./scripts/compile.ts",
    "build:src": "yarn tsc -b",
    "build:copy": "cpx \"./src/deployed/**\" ./build/deployed",
    "clean": "rimraf ./build",
    "test": "yarn run-jest",
    "test:ci": "yarn run-jest-nix",
    "_hardhat": "cross-env HARDHAT_CONFIG=hardhat.config.cts yarn run-env"
  },
  "files": [
    "build/**/*"
  ],
  "exports": {
    "./writePlugin": "./internal/writePlugin.ts",
    "./*": "./build/*.js",
    ".": "./build/index.js"
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "writePlugin": [
        "./internal/writePlugin.ts"
      ],
      "*": [
        "build/*.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@thecointech/async": "^0.2.106",
    "@thecointech/contract-tools": "^0.2.106",
    "jest": "*"
  },
  "dependencies": {
    "@thecointech/contract-oracle": "^0.2.106"
  }
}
