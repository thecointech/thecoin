{
  "name": "@thecointech/contract-tools",
  "version": "0.2.46",
  "private": "true",
  "description": "TheCoin: Build & deploy tools for our smart contracts",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/contract-tools"
  },
  "bin": {
    "contract-build": "./src/contract-build.js",
    "contract-verify": "./src/contract-verify.js",
    "contract-migrate": "./src/contract-migrate.js",
    "contract-gen-types": "./src/contract-gen-types.js"
  },
  "scripts": {
    "build": "yarn tsc",
    "emulator": "truffle develop --config=./src/truffle.js",
    "prod:console": "cross-env CONFIG_NAME=prodtest truffle console --network prodtest"
  },
  "exports": {
    "./truffle": "./src/truffle.js",
    "./migrations": "./build/migrations.js",
    "./jest.config": "./src/jest.config.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "build/*.d.ts"
      ]
    }
  },
  "dependencies": {
    "@thecointech/signers": "^0.2.46",
    "@truffle/hdwallet-provider": "^1.5.1",
    "@typechain/ethers-v5": "^8.0.0",
    "@typechain/truffle-v5": "^6.0.0",
    "truffle": "^5.4.17",
    "truffle-plugin-verify": "^0.5.16",
    "typechain": "^6.0.2"
  }
}
