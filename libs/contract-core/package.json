{
  "name": "@thecointech/contract-core",
  "version": "0.2.88",
  "description": "The Coin: Solidity contract for TheCoin currency",
  "type": "module",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/contract"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prepublishOnly": "rimraf ./build/.buildinfo",
    "build": "run-s build:contracts build:src",
    "build:contracts": "yarn _hardhat ./scripts/compile.ts",
    "build:src": "run-p build:src:*",
    "_build:src:cjs": "yarn tsc --project tsconfig.build.cjs.json",
    "build:src:mjs": "yarn tsc --project tsconfig.build.mjs.json",
    "build:src:copy": "cpx \"./src/deployed/**\" ./build/cjs/deployed && cpx \"./src/deployed/**\" ./build/mjs/deployed",
    "clean": "run-p clean:*",
    "clean:src": "rimraf ./build",
    "clean:contracts": "rimraf ./src/contracts && rimraf ./src/types",
    "test": "yarn run-jest",
    "test:ci": "yarn run-jest-nix",
    "dev:live": "yarn wait-port 9545 && cross-env CONFIG_NAME=devlive yarn deploy:polygon",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn deploy:both",
    "prod": "cross-env CONFIG_NAME=prod yarn deploy:polygon",
    "deploy:both": "yarn deploy:polygon && yarn deploy:ethereum",
    "deploy:polygon": "cross-env HARDHAT_NETWORK=polygon yarn _deploy",
    "deploy:ethereum": "cross-env HARDHAT_NETWORK=ethereum yarn _deploy",
    "_deploy": "run-s _deploy:deploy _deploy:seed _deploy:verify",
    "_deploy:deploy": "yarn _hardhat ./scripts/deploy.ts",
    "_deploy:seed": "yarn _hardhat ./scripts/seed/main.ts",
    "_deploy:verify": "yarn _hardhat ./scripts/verify.ts",
    "_hardhat": "cross-env HARDHAT_CONFIG=hardhat.config.cts yarn run-env"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    "./contract": "./build/mjs/index.js",
    ".": {
      "development": "./build/mjs/index_mocked.js",
      "electron": "./build/mjs/index.js",
      "default": "./build/mjs/index.js"
    }
  },
  "types": "./build/mjs/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "build/mjs/index.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@thecointech/async": "^0.2.88",
    "@thecointech/contract-tools": "^0.2.88",
    "jest": "*"
  },
  "dependencies": {
    "@thecointech/contract-base": "^0.2.88"
  },
  "gitHead": "bea153a75a41c0544d4a11901ccade3bfbb2536e"
}
