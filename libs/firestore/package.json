{
  "name": "@thecointech/firestore",
  "version": "0.2.1",
  "description": "The Coin: Environment-agnostic access to firestore",
  "keywords": [
    "THECoin",
    "firestore"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/firestore"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prepublishOnly": "run-s clean build publish:clean",
    "publish:clean": "rimraf ./build/.buildinfo",
    "build": "yarn tsc -b tsconfig.build.json",
    "clean": "rimraf ./build && rimraf ./coverage",
    "test": "jest --coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./*": "./build/*.js"
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [ "build/index.d.ts" ],
      "*": [ "build/*.d.ts", "build/*/index.d.ts" ]
    }
  },
  "dependencies": {
    "@thecointech/logging": "*"
  },
  "peerDependencies": {
    "@google-cloud/firestore": "*",
    "firebase": "*"
  },
  "devDependencies": {
    "jest": "*",
    "firestore-jest-mock": "https://github.com/thecointech/firestore-jest-mock#05ae1f76"
  }
}
