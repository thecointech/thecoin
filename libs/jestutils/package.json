{
  "name": "@the-coin/jestutils",
  "version": "0.0.1",
  "description": "The Coin: Simple jest extentions",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/jestutils"
  },
  "scripts": {
    "deploy": "yarn deploy:pre && cd build && yarn publish && yarn deploy:post",
    "deploy:pre": "yarn build:clean && yarn build && yarn deploy:copy && yarn deploy:clean ",
    "deploy:post": "rimraf ./build/package.json",
    "build": "yarn tsc -b -v tsconfig.build.json",
    "build:clean": "rimraf ./build && rimraf ./coverage",
    "test": "jest --coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./": "./build/"
  },
  "devDependencies": {
    "jest": "*"
  }
}
