{
  "name": "@thecointech/shared",
  "private": "true",
  "version": "0.2.13",
  "description": "The Coin: Shared functionality for the react website & admin app",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/shared"
  },
  "scripts": {
    "test": "yarn jest",
    "clean": "rimraf ./build",
    "build": "run-p build:src build:copy build:link",
    "build:src": "yarn tsc -b tsconfig.build.json",
    "build:copy": "cpx \"./src/**/*.svg\" ./build/",
    "build:link": "node ../../tools/link-assets.mjs **/*.module.less",
    "extract": "formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json --format ../../tools/format-intl.js && formatjs compile lang/fr.json --out-file src/translations/fr.json --format ../../tools/format-intl.js"  
  },
  "files": [
    "./build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./*": [
      "./build/*.js",
      "./build/*/index.js"
    ]
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [
        "build/index.d.ts"
      ],
      "*": [
        "build/*.d.ts",
        "build/*/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@3id/connect": "^0.1.4",
    "@ceramicnetwork/common": "^1.0.6",
    "@ceramicnetwork/http-client": "^1.0.6",
    "@nivo/bar": "^0.67.0",
    "@nivo/core": "^0.67.0",
    "@nivo/line": "^0.67.0",
    "@nivo/tooltip": "^0.67.0",
    "@thecointech/logging": "^0.2.13",
    "@thecointech/pricing": "^0.2.12",
    "@thecointech/site-semantic-theme": "^0.2.6",
    "@thecointech/store": "^0.2.7",
    "@thecointech/types": "^0.2.6",
    "@thecointech/tx-blockchain": "^0.2.13",
    "@thecointech/utilities": "^0.2.13",
    "axios": "*",
    "history": "4.9.0",
    "hoist-non-react-statics": "^3.3.1",
    "immer-reducer": "^0.7.11",
    "react-dates": "^21.5.1",
    "react-input-mask": "2.0.4",
    "react-with-direction": "^1.3.1",
    "redux-injectors": "https://github.com/FrozenKiwi/redux-injectors#6209c56b"
  },
  "devDependencies": {
    "@babel/runtime": "^7.7.7",
    "@nivo/generators": "^0.67.0",
    "@thecointech/types": "*",
    "@types/d3-scale-chromatic": "^2.0.0",
    "@types/d3-shape": "^2.0.0",
    "@types/history": "^4.7.3",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/react-dates": "^17.1.6",
    "jest": "*"
  }
}
