    "@nivo/tooltip": "^0.67.0",
    "@thecointech/logging": "^0.2.2",
    "@thecointech/pricing": "^0.2.2",
    "@thecointech/store": "^0.2.2",
    "@thecointech/types": "^0.2.2",
