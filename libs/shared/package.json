    "@nivo/generators": "^0.67.0",
    "@thecointech/types": "*",
    "@types/d3-scale-chromatic": "^2.0.0",
    "@types/d3-shape": "^2.0.0",
    "@types/history": "^4.7.3",
    "@types/hoist-non-react-statics": "^3.3.1",
