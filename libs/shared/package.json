{
  "name": "@thecointech/shared",
  "private": "true",
  "version": "0.2.81",
  "description": "The Coin: Shared functionality for the react website & admin app",
  "type": "module",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/shared"
  },
  "scripts": {
    "test": "yarn run-jest",
    "clean": "rimraf ./build",
    "prebuild": "yarn build:i18n",
    "build": "run-p build:src build:link",
    "build:src": "yarn tsc -b tsconfig.build.json",
    "build:link": "node ../../tools/link-assets.mjs",
    "build:i18n": "run-s extract compile",
    "extract": "formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json && formatjs compile lang/fr.json --out-file src/translations/fr.json"
  },
  "files": [
    "./build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./*": [
      "./build/*.js",
      "./build/*/index.js"
    ]
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [
        "build/index.d.ts"
      ],
      "*": [
        "build/*.d.ts",
        "build/*/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@nivo/bar": "0.79.1",
    "@nivo/core": "0.79.0",
    "@nivo/line": "0.79.1",
    "@nivo/tooltip": "0.79.0",
    "@thecointech/account": "^0.2.81",
    "@thecointech/fx-rates": "^0.2.81",
    "@thecointech/logging": "^0.2.81",
    "@thecointech/site-semantic-theme": "^0.2.81",
    "@thecointech/store": "^0.2.81",
    "@thecointech/tx-blockchain": "^0.2.81",
    "@thecointech/types": "^0.2.81",
    "@thecointech/utilities": "^0.2.81",
    "history": "4.9.0",
    "hoist-non-react-statics": "^3.3.1",
    "immer-reducer": "^0.7.11",
    "react-dates": "21.8.0",
    "react-dropzone": "12.0.4",
    "react-input-mask": "2.0.4",
    "react-with-direction": "^1.3.1",
    "redux-injectors": "https://github.com/FrozenKiwi/redux-injectors#6209c56b",
    "ts-clipboard": "^1.0.17"
  },
  "devDependencies": {
    "@babel/runtime": "^7.7.7",
    "@thecointech/types": "*",
    "@types/d3-scale-chromatic": "^2.0.0",
    "@types/d3-shape": "^2.0.0",
    "@types/history": "^4.7.3",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/react-dates": "21.8.0",
    "jest": "*"
  }
}
