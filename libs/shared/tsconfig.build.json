{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ]
  },
  "exclude": ["**/*.test.*", "**/tests/**", "**/__mocks__/**", "**/*.stories.*"],
  "references": [
    { "path": "../utils-ts/tsconfig.build.json" },
    { "path": "../store/tsconfig.build.json" },
    { "path": "../logging/tsconfig.build.json" },
    { "path": "../account/tsconfig.build.json" },
    { "path": "../tx-blockchain/tsconfig.build.json" },
  ]
}

