{
  "name": "@thecointech/tx-statemachine",
  "version": "0.2.18",
  "description": "The Coin: The execution statemachine for processing coin transactions",
  "keywords": [
    "THECoin"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/tx-statemachine"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prepublishOnly": "rimraf ./build/.buildinfo",
    "build": "yarn tsc -b tsconfig.build.json",
    "clean": "rimraf ./build && rimraf ./coverage",
    "test": "jest --coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./transitions": "./build/transitions/index.js"
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [
        "build/index.d.ts"
      ],
      "*": [
        "build/*.d.ts",
        "build/*/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@thecointech/broker-db": "^0.2.18",
    "@thecointech/contract": "^0.2.18",
    "@thecointech/email": "^0.2.18",
    "@thecointech/fx-rates": "^0.2.18",
    "@thecointech/logging": "^0.2.18",
    "@thecointech/market-status": "^0.2.18",
    "@thecointech/utilities": "^0.2.18"
  },
  "devDependencies": {
    "@thecointech/rbcapi": "^0.2.18",
    "@thecointech/tx-gmail": "^0.2.18",
    "jest": "*"
  }
}
