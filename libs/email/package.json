{
  "name": "@thecointech/email",
  "version": "0.2.1",
  "description": "The Coin: auto-mailing library.  Not for external user really",
  "keywords": [
    "TheCoin",
    "email"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/email"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "deploy": "yarn deploy:pre && cd build && yarn publish && yarn deploy:post",
    "deploy:copy": "cpx \"./package.json\" build --command \"node ../../tools/package-clean.js\"",
    "deploy:clean": "rimraf ./build/.buildinfo",
    "deploy:pre": "yarn clean && yarn build && yarn deploy:copy && yarn deploy:clean ",
    "deploy:post": "rimraf ./build/package.json",
    "build": "yarn tsc --project tsconfig.build.json",
    "test": "yarn jest",
    "clean": "rimraf ./build && rimraf ./coverage"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": "./build/index.js",
  "dependencies": {
    "@thecointech/logging": "^0.2.1",
    "node-mailjet": "^3.3.1"
  },
  "devDependencies": {
    "@types/node-mailjet": "^3.3.1",
    "jest": "*"
  }
}
