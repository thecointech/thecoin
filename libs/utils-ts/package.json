{
  "name": "@thecointech/utilities",
  "version": "0.2.3",
  "description": "The Coin: Utilities shared amongst typescript-based projects",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/utils-ts"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "deploy": "yarn deploy:pre && cd build && yarn publish && yarn deploy:post",
    "deploy:copy": "cpx \"./package.json\" build --command \"node ../../tools/package-clean.js\"",
    "deploy:clean": "rimraf ./build/.buildinfo",
    "deploy:pre": "yarn clean && yarn build && yarn deploy:copy && yarn deploy:clean ",
    "deploy:post": "rimraf ./build/package.json",
    "deploy:lib": "yarn deploy",
    "build:lib": "yarn build",
    "build": "yarn tsc -b tsconfig.build.json",
    "clean": "rimraf ./build && rimraf ./coverage",
    "test": "jest --coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./*": "./build/*.js"
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "build/index.d.ts": [ "build/index.d.ts" ],
      "*": [ "build/*.d.ts", "build/*/index.d.ts" ]
    }
  },
  "dependencies": {
    "@thecointech/contract": "*",
    "@thecointech/logging": "*",
    "base32": "^0.0.6",
    "firebase": "^8.2.9"
  },
  "peerDependencies": {
    "axios": "*",
    "luxon": "*"
  },
  "devDependencies": {
    "@thecointech/jestutils": "^0.2.2",
    "@thecointech/types": "^0.2.2",
    "jest": "*"
  }
}
