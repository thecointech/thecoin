{
  "name": "@the-coin/site-base",
  "productName": "THECoin: Website - Base",
  "private": true,
  "workspaces": {
    "nohoist": [
      "semantic-ui-less"
    ]
  },
  "version": "2.0.0",
  "description": "THECoin: Future-proof currency",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn build:clean",
    "build": "yarn tsc -b -v tsconfig.build.json && yarn build:link && yarn build:semantic",
    "build:link": "node ../../tools/link-assets.mjs \"**/*.!(module.css.d.ts|css.d.ts|d.ts|ts|tsx|js|jsx)\"",
    "build:clean": "rimraf ./build",
    "build:semantic": "node ./internal/buildSemantic.js",
    "clean:all": "yarn analyze:clean && yarn test:clean && yarn build:clean",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "pretest": "yarn test:clean",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "formatjs extract",
    "extract-intl": "yarn extract 'src/**/!(*.test).ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "formatjs compile",
    "format-intl": "yarn compile lang/en.json --out-file src/translations/en.json --format ./internals/scripts/format-intl.js"
  },
  "dependencies": {
    "@formatjs/intl-pluralrules": "^1.4.1",
    "@the-coin/shared": "*",
    "@the-coin/utilities": "*",
    "connected-react-router": "^6.6.1",
    "fontsource-abril-fatface": "3.1.5",
    "fontsource-montserrat": "3.1.5",
    "intl": "^1.2.5",
    "react-animate-height": "^2.0.18",
    "react-ga": "^2.7.0",
    "react-helmet": "6.0.0-beta",
    "react-measure": "^2.3.0",
    "react-transition-group": "^4.3.0",
    "reselect": "4.0.0",
    "sanitize.css": "10.0.0",
    "semantic-ui-less": "^2.4.1"
  },
  "devDependencies": {
    "@types/intl": "^1.2.0",
    "@types/react-helmet": "5.0.9",
    "@types/react-measure": "^2.0.5",
    "@types/react-transition-group": "^4.2.3",
    "jest": "*",
    "less-loader": "^5.0.0",
    "semantic-ui-less": "^2.4.1",
    "nocache": "^2.1.0"
  }
}
