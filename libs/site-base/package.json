{
  "name": "@thecointech/site-base",
  "productName": "THECoin: Website - Base",
  "private": true,
  "version": "0.2.90",
  "description": "THECoin: Future-proof currency",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn build:i18n",
    "build": "run-p build:src build:link",
    "build:src": "yarn tsc -b \"tsconfig.build.json\"",
    "build:link": "node ../../tools/link-assets.mjs",
    "build:i18n": "run-s extract compile",
    "clean": "run-p clean:*",
    "clean:src": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "pretest": "yarn clean:test",
    "test": "yarn run-jest",
    "test:ci": "yarn run-jest-nix",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json && formatjs compile lang/fr.json --out-file src/translations/fr.json"
  },
  "files": [
    "build/**/*"
  ],
  "exports": {
    ".": "./build/index.js",
    "./internal/server": "./internal/server/index.mjs",
    "./jest.config": "./jest.config.js",
    "./*": [
      "./build/*.js",
      "./build/*/index.js"
    ]
  },
  "typesVersions": {
    "*": {
      "build/index.d.ts": [
        "build/index.d.ts"
      ],
      "*": [
        "build/*.d.ts",
        "build/*/index.d.ts"
      ]
    }
  },
  "dependencies": {
    "@formatjs/intl-pluralrules": "^1.4.1",
    "@thecointech/apis": "^0.2.90",
    "@thecointech/shared": "^0.2.90",
    "@thecointech/site-semantic-theme": "^0.2.90",
    "@thecointech/utilities": "^0.2.90",
    "connected-react-router": "^6.6.1",
    "intl": "^1.2.5",
    "react-animate-height": "^3.0.4",
    "react-ga": "^2.7.0",
    "react-measure": "^2.3.0",
    "react-transition-group": "^4.3.0",
    "reselect": "4.0.0",
    "sanitize.css": "10.0.0",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/intl": "^1.2.0",
    "@types/react-measure": "^2.0.5",
    "@types/react-transition-group": "^4.2.3",
    "@types/zxcvbn": "^4.4.0",
    "dotenv-webpack": "^7.0.3",
    "minimist": "^1.2.3",
    "nocache": "^2.1.0"
  }
}
