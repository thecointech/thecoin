{
  "name": "@thecointech/contract-oracle",
  "version": "0.2.116",
  "description": "The Coin: Price Oracles for TheCoin",
  "type": "module",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "libs/contract-oracle"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "prepublishOnly": "run -T rimraf ./build/.buildinfo",
    "build": "run -T run-s build:contracts build:copy build:src",
    "build:contracts": "yarn _hardhat ./scripts/compile.ts",
    "build:src": "run -T tsc -b",
    "build:copy": "run -T cpx \"./src/deployed/**\" ./build/deployed",
    "clean": "run -T run-p 'clean:*'",
    "clean:src": "run -T rimraf ./build",
    "clean:contracts": "run -T rimraf ./src/codegen && run -T rimraf ./src/types",
    "test": "run :jest",
    "validate:prod": "cross-env CONFIG_NAME=prod yarn _hardhat ./scripts/validate.ts",
    "validate:localprod": "cross-env CONFIG_NAME=prod URL_SERVICE_RATES=http://localhost:7001/api/v1 yarn _hardhat ./scripts/validate.ts",
    "reset:localprod": "cross-env CONFIG_NAME=prod URL_SERVICE_RATES=http://localhost:7001/api/v1 yarn _hardhat ./scripts/reset.ts",
    "dev:live": "yarn wait-port 9545 && cross-env CONFIG_NAME=devlive yarn deploy:polygon",
    "deploy:prod": "cross-env CONFIG_NAME=prod yarn deploy:polygon",
    "deploy:prodtest": "cross-env CONFIG_NAME=prodtest yarn deploy:polygon",
    "deploy:both": "yarn deploy:polygon && yarn deploy:ethereum",
    "deploy:polygon": "cross-env HARDHAT_NETWORK=polygon yarn _deploy",
    "deploy:ethereum": "cross-env HARDHAT_NETWORK=ethereum yarn _deploy",
    "update:prod": "cross-env CONFIG_NAME=prod yarn _update",
    "_deploy": "run-s _deploy:deploy _deploy:verify",
    "_deploy:deploy": "yarn _hardhat ./scripts/deploy.ts",
    "_deploy:verify": "yarn _hardhat ./scripts/verify.ts",
    "_update": "yarn build && yarn _hardhat ./scripts/update.ts && yarn _deploy:verify",
    "_hardhat": "cross-env HARDHAT_CONFIG=hardhat.config.cts yarn run-env"
  },
  "files": [
    "build/**/*"
  ],
  "exports": {
    "./testHelpers.ts": "./internal/testHelpers.ts",
    ".": {
      "development": "./build/index_mocked.js",
      "electron": "./build/index.js",
      "default": "./build/index.js"
    }
  },
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      "testHelpers.ts": [
        "./internal/testHelpers.ts"
      ],
      "*": [
        "build/index.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@thecointech/async": "workspace:^",
    "@thecointech/contract-tools": "workspace:^",
    "@thecointech/jestutils": "workspace:^",
    "@thecointech/setenv": "workspace:^"
  },
  "dependencies": {
    "@thecointech/contract-base": "workspace:^"
  }
}
