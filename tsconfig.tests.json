{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["dom", "ES2022"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
