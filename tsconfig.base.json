{
  "compilerOptions": {

    "incremental": true,

    "jsx": "react",
    "allowJs": true, // include js files
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "types": ["jest", "node"],
    "build": true,

    //"allowSyntheticDefaultImports": true, // no errors with commonjs modules interop

    "pretty": true,
    "sourceMap": true,
    "noEmitOnError": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,

    // Strict-ness
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    //"preserveConstEnums": true,

    // Don't emit; allow Babel to transform files.
    //"noEmit": true,
    // Disallow features that require cross-file information for emit.
    // This throws up a bunch of errors in the-react-components.
    // (later) consider fixing those errors and re-enabling it
    //"isolatedModules": true,
    // Import non-ES modules as default imports.
    // NOTE: this causes issues with DateTime
    //"esModuleInterop": true,

    //
    // Allow project references
    //
    "declaration": true,
    "declarationMap": true,
    //"composite": true,

    //
    // Fix jest testing
    //
    //"typeRoots": ["./types", "./node_modules/@types"]

    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "exclude": ["node_modules", "build/**/*", "**/node_modules/**", "**/*.test.*"]
}
