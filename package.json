{
  "name": "the-coin",
  "private": true,
  "workspaces": {
    "packages": [
      "submodules/*",
      "libs/*",
      "apps/*",
      "apis/**/*"
    ],
    "nohoist": [
      "**/semantic-ui-less"
    ]
  },
  "engines": {
    "node": ">=12.18.x"
  },
  "scripts": {
    "gen:rates": "openapi-generator-cli generate -i apps/rates-service/src/api/swagger.json -g typescript-axios -o apis/rates/ts -c apis/rates/client-ts-spec.json",
    "gen:broker": "openapi-generator-cli generate -i apps/broker-service/src/api/swagger.json -g typescript-axios -o apis/broker/ts -c apis/broker/client-ts-spec.json",
    "gen:apis": "yarn gen:rates && yarn gen:broker",
    "build:projects": "lerna run build",
    "build:rates": "cd apis/rates/ts && yarn build",
    "build:broker": "cd apis/broker/ts && yarn build",
    "build:apis": "run-p build:rates build:broker",
    "build": "run-s clean build:projects gen:apis build:apis",
    "dev:live:firestore": "yarn firebase emulators:start --only firestore --project broker-cad",
    "dev:live:ceramic": "yarn ceramic daemon",
    "dev:live:projects": "yarn wait-port 8377 && yarn lerna run dev:live --stream --no-bail",
    "dev:live:bootstrap": "yarn wait-port 7007 && yarn idx bootstrap && node ./tools/bootstrapIdx.js",
    "dev:live": "run-p dev:live:*",
    "deploy:testing:sites": "firebase deploy --project tccc-testing --only hosting",
    "clean": "lerna run clean",
    "clean:ceramic": "rimraf ~/.ceramic && ~/.jsipfs",
    "test": "lerna run test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "bootstrap": "node ./tools/bootstrapIdx.js"
  },
