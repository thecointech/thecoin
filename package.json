{
  "name": "the-coin",
  "private": true,
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "apis/**/*"
    ],
    "nohoist": [
      "**/semantic-ui-less"
    ]
  },
  "engines": {
    "node": ">=12.18.x"
  },
  "scripts": {
    "gen:tapcap-cs": "openapi-generator-cli generate -i apps/tapcap-supplier/api/swagger.json -g csharp-netcore -o apis/tapcap/cs -c apis/tapcap/client-cs-spec.json",
    "gen:rates": "openapi-generator-cli generate -i apps/rates-service/src/api/swagger.json -g typescript-axios -o apis/rates/ts -c apis/rates/client-ts-spec.json",
    "gen:rates-cs": "openapi-generator-cli generate -i apps/rates-service/src/api/swagger.json -g csharp-netcore -o apis/rates/cs -c apis/rates/client-cs-spec.json",
    "gen:broker": "openapi-generator-cli generate -i apps/broker-service/src/api/swagger.json -g typescript-axios -o apis/broker/ts -c apis/broker/client-ts-spec.json",
    "gen:nft": "openapi-generator-cli generate -i apps/nft-service/src/api/swagger.json -g typescript-axios -o apis/nft/ts -c apis/nft/client-ts-spec.json",
    "genapis": "lerna run gen:swagger && cross-env JAVA_OPTS=\"-Dlog.level=warn\" run-p gen:*",
    "build:src": "lerna run build",
    "build:all": "run-s clean genapis build:src",
    "rebuild": "cross-env CONFIG_NAME=prod yarn build:all",
    "build": "cross-env CONFIG_NAME=prod yarn build:src",
    "dev:live:firestore": "yarn firebase emulators:start --only firestore --project broker-cad",
    "dev:live:ceramic": "yarn ceramic daemon --network=inmemory",
    "dev:live:blockchain": "cd libs/contract && yarn dev:live:emulator --network=devlive",
    "dev:live:projects": "yarn wait-port 9377 && yarn lerna run dev:live --stream --no-bail",
    "dev:live:bootstrap": "yarn wait-port 7007 && yarn idx bootstrap && ts-node --skip-project ./tools/bootstrapIdx.ts",
    "dev:live": "cross-env CONFIG_NAME=devlive run-p dev:live:*",
    "deploy:prodtest": "cross-env CONFIG_NAME=prodtest yarn _deploy",
    "deploy:prod": "cross-env CONFIG_NAME=prod yarn _deploy",
    "pre_deploy": "run-s check-changes build:all",
    "_deploy": "run-s _deploy:lib _deploy:app",
    "_deploy:lib": "lerna publish",
    "_deploy:app": "run-s _deploy:app:rebuild _deploy:app:gcloud",
    "_deploy:app:rebuild": "lerna run deploy:rebuild",
    "_deploy:app:gcloud": "lerna run deploy --stream --concurrency 1",
    "prod:test:bootstrap": "cross-env CONFIG_NAME=prodtest node ./tools/bootstrapIdx.js",
    "prod:test:deposit": "cross-env CONFIG_NAME=prodtest ts-node --project ./tsconfig.dev.json ./tools/fakeDeposit",
    "clean": "run-p clean:src clean:apis",
    "clean:src": "lerna run clean",
    "clean:ceramic": "rimraf ~/.ceramic && ~/.jsipfs",
    "clean:apis": "git clean -qfdx ./apis",
    "test": "lerna run test",
    "test:ci": "lerna run test -- --ci --forceExit",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "dedup": "yarn yarn-deduplicate -s fewer",
    "check-changes": "git diff-index --quiet HEAD -- ",
    "dump-firestore": "cross-env CONFIG_NAME=devlive ts-node --project ./tsconfig.dev.json ./tools/dumpFirestore.ts"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^8.2.0",
    "firebase": "^8.5.0",
    "invariant": "2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.26.0",
    "pouchdb": "^7.2.1",
    "pouchdb-upsert": "^2.2.0",
    "prismic-reactjs": "^1.3.4",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-intl": "^5.18.1",
    "react-redux": "^7.2.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "semantic-ui-react": "^2.0.1",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@ceramicnetwork/cli": "^1.0.6",
    "@ceramicstudio/idx-cli": "^0.10.0",
    "@ceramicstudio/idx-tools": "^0.11.0",
    "@formatjs/cli": "^4.2.27",
