{
  "name": "the-coin",
  "private": true,
  "workspaces": {
    "packages": [
      "submodules/*",
      "libs/*",
      "apps/*",
      "apis/**/*"
    ],
    "nohoist": [
      "**/semantic-ui-less"
    ]
  },
  "engines": {
    "node": ">=12.18.x"
  },
  "scripts": {
    "gen:tapcap-cs": "openapi-generator-cli generate -i apps/tapcap-supplier/api/swagger.json -g csharp-netcore -o apis/tapcap/cs -c apis/tapcap/client-cs-spec.json",
    "gen:rates": "openapi-generator-cli generate -i apps/rates-service/src/api/swagger.json -g typescript-axios -o apis/rates/ts -c apis/rates/client-ts-spec.json",
    "gen:rates-cs": "openapi-generator-cli generate -i apps/rates-service/src/api/swagger.json -g csharp-netcore -o apis/rates/cs -c apis/rates/client-cs-spec.json",
    "gen:broker": "openapi-generator-cli generate -i apps/broker-service/src/api/swagger.json -g typescript-axios -o apis/broker/ts -c apis/broker/client-ts-spec.json",
    "gen:nft": "openapi-generator-cli generate -i apps/nft-service/src/api/swagger.json -g typescript-axios -o apis/nft/ts -c apis/nft/client-ts-spec.json",
    "genapis": "lerna run gen:swagger && run-p gen:*",
    "build:src": "lerna run build",
    "build:all": "run-s clean genapis build:src",
    "build": "cross-env CONFIG_NAME=prod yarn build:all",
    "dev:live:firestore": "yarn firebase emulators:start --only firestore --project broker-cad",
    "dev:live:ceramic": "yarn ceramic daemon --network=inmemory",
    "dev:live:blockchain": "cd libs/contract && yarn dev:live:emulator",
    "dev:live:projects": "yarn wait-port 8377 && yarn lerna run dev:live --stream --no-bail",
    "dev:live:bootstrap": "yarn wait-port 7007 && yarn idx bootstrap && ts-node --skip-project ./tools/bootstrapIdx.ts",
    "dev:live": "cross-env CONFIG_NAME=devlive run-p dev:live:*",
    "deploy:prodtest": "cross-env CONFIG_NAME=prodtest yarn _deploy",
    "deploy:prod": "cross-env CONFIG_NAME=prod yarn _deploy",
    "pre_deploy": "yarn build:all",
    "_deploy": "run-s _deploy:version _deploy:lib _deploy:app",
    "_deploy:version": "lerna version --allow-branch */* --no-push",
    "_deploy:lib": "lerna run deploy:lib",
    "_deploy:app": "lerna run deploy:app",
    "prod:test:bootstrap": "cross-env CONFIG_NAME=prodtest node ./tools/bootstrapIdx.js",
    "clean": "lerna run clean",
    "clean:ceramic": "rimraf ~/.ceramic && ~/.jsipfs",
    "test": "lerna run test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.11.0",
    "axios": "^0.21.1",
    "currency.js": "^2.0.3",
    "dotenv": "^8.2.0",
    "ethers": "4.0.47",
    "firebase": "^8.5.0",
    "invariant": "2.2.4",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "pouchdb": "^7.2.1",
