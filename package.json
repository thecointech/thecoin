{
  "name": "the-coin",
  "private": true,
  "workspaces": {
    "packages": [
      "libs/*",
      "apps/*",
      "apis/**/*"
    ],
    "nohoist": [
      "**/semantic-ui-less"
    ]
  },
  "scripts": {
    "postinstall": "yarn build:apis",
    "gen:rates": "openapi-generator generate -i apis/the-pricing.yaml -g typescript-axios -o apis/rates/ts -c apis/rates/client-ts-spec.json",
    "gen:broker": "openapi-generator generate -i apis/broker-cad.yaml -g typescript-axios -o apis/broker/ts -c apis/broker/client-ts-spec.json",
    "gen:apis": "yarn gen:rates && yarn gen:broker",
    "build:rates": "cd apis/rates/ts && yarn build",
    "build:broker": "cd apis/broker/ts && yarn build",
    "build:apis": "concurrently \"yarn build:rates\" \"yarn build:broker\"",
    "gen:broker:server": "openapi-generator generate -i apis/broker-cad.yaml -g nodejs-express-server -o apps/broker-service/Generated",
    "copy:broker:api": "cpx \"apps/broker-service/Generated/controllers/*.*\" \"apps/broker-service/src/controllers\" && cpx \"apps/broker-service/Generated/api/*.*\" \"apps/broker-service/src/api",
    "start:site": "cd apps/site && yarn start",
    "start:firestore": "yarn firebase emulators:start --only firestore",
    "test": "lerna run test"
  },
  "dependencies": {
