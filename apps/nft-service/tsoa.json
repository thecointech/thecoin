{
  "entryFile": "./src/main.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/controllers/**/*controller.ts"],
  "spec": {
    "basePath": "/api/v1",
    "specVersion": 3,
    "outputDirectory": "./src/api"
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "./src/routes",
    "middleware": "express",
    "esm": true
  },
  "ignore": [
    "**/node_modules/**",
    "**/build/**"
  ],
  "compilerOptions": {
    "paths": {
      "@thecointech/contract-nft":  ["../../libs/contract-nft/src"]
    }
  }
}
