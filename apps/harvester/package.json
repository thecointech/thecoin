{
  "name": "harvester",
  "version": "0.5.3-test.1",
  "private": true,
  "description": "Automatically harvest TheCoin",
  "main": ".webpack/main",
  "type": "module",
  "config": {
    "forge": "config/forge.config.mjs"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [],
  "author": {
    "name": "Stephen Taylor",
    "email": "stephen.taylor.dev@gmail.com"
  },
  "scripts": {
    "dev:harvest": "yarn dev -- --harvest",
    "dev": "yarn run -T cross-env CONFIG_NAME=development yarn _start:dbg",
    "_dev:live": "yarn run -T cross-env CONFIG_NAME=devlive yarn _start:dbg",
    "dev:live:finalize": "yarn run -T rimraf .cache/devlive",
    "prod:test": "yarn run -T cross-env CONFIG_NAME=prodtest yarn _start:dbg",
    "prod:beta": "yarn run -T cross-env CONFIG_NAME=prodbeta yarn _start:dbg",
    "prod": "yarn run -T cross-env CONFIG_NAME=prod yarn _start:dbg",
    "package": "electron-forge package",
    "make:dev": "yarn run -T cross-env NODE_ENV=production CONFIG_NAME=development yarn _make",
    "make:prod": "yarn run -T cross-env CONFIG_NAME=prodbeta yarn _make",
    "make:prodtest": "yarn run -T cross-env CONFIG_NAME=prodtest yarn _make",
    "make:validation": "yarn run -T cross-env CONFIG_NAME=prodbeta NOTIFY_ON_MODAL_ENCOUNTER=true yarn _make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build": "run -T tsc -b",
    "test": "yarn run :jest",
    "_start:dbg": "yarn run -T cross-env NODE_ENV=development RUN_SCRAPER_HEADLESS=false HARVESTER_PROFILE_FOLDER=\"./.cache/$CONFIG_NAME\" ELECTRON_DISABLE_SANDBOX=true yarn run-env $(yarn bin electron-forge) start",
    "_start": "yarn run-env $(yarn bin electron-forge) start",
    "_make": "yarn run-env $(yarn bin electron-forge) make"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@electron-forge/plugin-webpack": "^7.2.0",
    "@thecointech/jestutils": "^0.5.3-test.0",
    "@thecointech/setenv": "workspace:^",
    "@timfish/forge-externals-plugin": "https://github.com/FrozenKiwi/forge-externals-plugin-monorepo",
    "@types/node-notifier": "^8.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "electron": "28.1.3",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13"
  },
  "dependencies": {
    "@thecointech/account": "^0.5.3-test.1",
    "@thecointech/apis": "^0.5.3-test.0",
    "@thecointech/async": "^0.5.3-test.0",
    "@thecointech/contract-plugin-converter": "^0.5.3-test.1",
    "@thecointech/contract-plugin-shockabsorber": "^0.5.3-test.1",
    "@thecointech/contract-plugins": "^0.5.3-test.1",
    "@thecointech/electron-signer": "workspace:*",
    "@thecointech/fx-rates": "^0.5.3-test.1",
    "@thecointech/logging": "^0.5.3-test.1",
    "@thecointech/scraper": "^0.5.3-test.1",
    "@thecointech/scraper-agent": "^0.5.3-test.1",
    "@thecointech/shared": "^0.5.3-test.1",
    "@thecointech/signers": "^0.5.3-test.1",
    "@thecointech/store-harvester": "workspace:*",
    "@thecointech/utilities": "^0.5.3-test.1",
    "crontab": "^1.4.2",
    "currency.js": "^2.0.4",
    "electron-context-menu": "^3.6.1",
    "electron-squirrel-startup": "^1.0.0",
    "node-notifier": "^10.0.0",
    "open": "^8.4.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "3.0.0-beta.2"
  }
}
