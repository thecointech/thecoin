{
  // This is an alias to @tsconfig/node16: https://github.com/tsconfig/bases
  "extends": "../tsconfig.apps.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./build/.buildinfo",
    "outDir": "./build/",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "skipLibCheck": true,

    "allowJs": true,
    "jsx": "react-jsx",
    "declaration": true,
    // "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    // "baseUrl": ".",
    // "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
