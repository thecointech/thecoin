{
  "name": "@thecointech/site-app",
  "productName": "THECoin: Website - App",
  "private": true,
  "version": "0.5.3-test.1",
  "description": "THECoin: Future-proof currency",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "preanalyze": "yarn clean:analyze",
    "analyze": "node ./internals/scripts/analyze.js",
    "build": "run -T run-s build:pre build:src",
    "build:src": "run -T run-p build:src:tests build:src:build",
    "build:src:tests": "run -T tsc --project ./tsconfig.tests.json",
    "build:src:build": "URL_SEQ_LOGGING=false run-env exec=webpack --config ./internals/webpack.ts",
    "build:pre": "run -T run-p 'build:pre:*'",
    "build:pre:semantic": "run-env ./internals/buildSemantic.ts",
    "build:pre:i18n": "run-s extract compile",
    "clean": "run-p 'clean:*'",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "clean:analyze": "rimraf stats.json",
    "deploy:rebuild": "yarn build",
    "deploy": "yarn run-env ./deploy.ts",
    "dev": "run -T cross-env NODE_ENV=development URL_SEQ_LOGGING=false run-env exec=webpack-dev-server --config ./internals/webpack.ts",
    "dev:live": "run -T cross-env CONFIG_NAME=devlive yarn dev",
    "prod:test": "run -T cross-env CONFIG_NAME=prodtest yarn dev",
    "prod:beta": "run -T cross-env CONFIG_NAME=prodbeta yarn dev",
    "start": "firebase emulators:start --only hosting",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "pretest": "yarn clean:test",
    "test": "run :jest",
    "test:watch": "run -T cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "run -T formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "run -T formatjs compile lang/en.json --out-file src/translations/en.json && formatjs compile lang/fr.json --out-file src/translations/fr.json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:src:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "git add --force"
    ]
  },
  "dependencies": {
    "@thecointech/blockpass": "^0.5.3-test.1",
    "@thecointech/shared": "^0.5.3-test.1",
    "@thecointech/site-base": "^0.5.3-test.1",
    "@thecointech/utilities": "^0.5.3-test.1",
    "card-validator": "^6.2.0",
    "compression": "^1.8.1",
    "file-saver": "^2.0.2",
    "intl": "^1.2.5",
    "qrcode.react": "1.0.1",
    "react-confetti": "^6.0.0",
    "react-semantic-ui-range": "^0.7.0",
    "sanitize.css": "10.0.0"
  },
  "devDependencies": {
    "@thecointech/setenv": "^0.5.3-test.0",
    "@types/card-validator": "^4.1.0",
    "@types/expect": "1.20.4",
    "@types/file-saver": "^2.0.1",
    "@types/qrcode.react": "1.0.1",
    "@types/systemjs": "0.20.6",
    "coveralls": "3.0.4",
    "react-app-polyfill": "1.0.1",
    "whatwg-fetch": "3.0.0"
  }
}
