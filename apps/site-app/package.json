{
  "name": "@thecointech/site-app",
  "productName": "THECoin: Website - App",
  "private": true,
  "version": "0.2.19",
  "description": "THECoin: Future-proof currency",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "preanalyze": "yarn clean:analyze",
    "analyze": "node ./internals/scripts/analyze.js",
    "prebuild": "run-p build:semantic build:i18n",
    "build": "yarn build:semantic && yarn cross-env NODE_ENV=production webpack --config ../../libs/site-base/internal/webpack/webpack.prod.babel.js --progress",
    "build:semantic": "node ./internals/buildSemantic",
    "build:i18n": "run-s extract compile",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "clean:analyze": "rimraf stats.json",
    "predeploy": "ts-node --skip-project predeploy",
    "deploy:rebuild": "yarn build",
    "deploy": "firebase deploy --only hosting",
    "dev": "yarn cross-env NODE_ENV=development node internals/server",
    "dev:live": "cross-env CONFIG_NAME=devlive yarn dev",
    "dev:tunnel": "yarn cross-env NODE_ENV=development ENABLE_TUNNEL=true node server",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn start:server",
    "start": "yarn test && yarn build && yarn start:server",
    "start:server": "yarn cross-env NODE_ENV=production node ./internals/server",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "pretest": "yarn clean:test",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json && formatjs compile lang/fr.json --out-file src/translations/fr.json"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:src:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "git add --force"
    ]
  },
  "dependencies": {
    "@artsy/fresnel": "^1.2.2",
    "@thecointech/shared": "^0.2.19",
    "@thecointech/site-base": "^0.2.19",
    "@thecointech/utilities": "^0.2.19",
    "card-validator": "^6.2.0",
    "compression": "1.7.4",
    "connected-react-router": "^6.6.1",
    "file-saver": "^2.0.2",
    "intl": "^1.2.5",
    "ip": "1.1.5",
    "minimist": "1.2.0",
    "papaparse": "^5.1.1",
    "prismic-javascript": "^2.1.5",
    "prismic-reactjs": "^1.2.0",
    "qrcode.react": "1.0.1",
    "query-string": "^6.9.0",
    "react-animate-height": "^2.0.18",
    "react-confetti": "^6.0.0",
    "react-ga": "^2.7.0",
    "react-helmet": "6.0.0-beta",
    "react-measure": "^2.3.0",
    "react-semantic-ui-range": "^0.7.0",
    "react-transition-group": "^4.3.0",
    "reselect": "4.0.0",
    "sanitize.css": "10.0.0",
    "ts-clipboard": "^1.0.17"
  },
  "devDependencies": {
    "@octokit/rest": "16.33.1",
    "@types/card-validator": "^4.1.0",
    "@types/expect": "1.20.4",
    "@types/file-saver": "^2.0.1",
    "@types/papaparse": "^5.0.3",
    "@types/qrcode.react": "1.0.1",
    "@types/query-string": "^6.3.0",
    "@types/react-helmet": "5.0.9",
    "@types/react-measure": "^2.0.5",
    "@types/react-test-renderer": "^16.9.0",
    "@types/react-transition-group": "^4.2.3",
    "@types/systemjs": "0.20.6",
    "coveralls": "3.0.4",
    "esm": "3.2.25",
    "jest": "*",
    "ngrok": "3.2.1",
    "node-plop": "0.19.0",
    "plop": "2.4.0",
    "react-app-polyfill": "1.0.1",
    "react-test-renderer": "16.8.6",
    "shelljs": "0.8.3",
    "whatwg-fetch": "3.0.0"
  }
}
