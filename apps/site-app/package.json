{
  "name": "@the-coin/site-app",
  "productName": "THECoin: Website - App",
  "private": true,
  "workspaces": {
    "nohoist": [
      "semantic-ui-less"
    ]
  },
  "version": "2.0.0",
  "description": "THECoin: Future-proof currency",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "analyze:clean": "rimraf stats.json",
    "preanalyze": "yarn analyze:clean",
    "analyze": "node ./internals/scripts/analyze.js",
    "prebuild": "yarn build:clean",
    "build": "yarn cross-env NODE_ENV=production webpack --config internals/webpack/webpack.prod.babel.js --color -p --progress --hide-modules --display-optimization-bailout",
    "build:less": "yarn lessc --include-paths=",
    "build:copy": "cpx \"./src/**/*.!(module.css.d.ts|css.d.ts|d.ts|ts|tsx|js|jsx)\" ./build && cpx \"./src/.htaccess\" ./build",
    "build:clean": "rimraf ./build",
    "dev": "yarn cross-env NODE_ENV=development node server",
    "dev:tunnel": "yarn cross-env NODE_ENV=development ENABLE_TUNNEL=true node server",
    "start": "yarn test && yarn build && yarn start:server",
    "start:server": "yarn cross-env NODE_ENV=production node server",
    "clean:all": "yarn analyze:clean && yarn test:clean && yarn build:clean",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "typecheck": "tsc --noEmit",
    "pretest": "yarn test:clean",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "formatjs extract",
    "extract-intl": "yarn extract 'src/**/!(*.test).ts*' --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "formatjs compile",
    "format-intl": "yarn compile lang/en.json --out-file src/translations/en.json --format ./internals/scripts/format-intl.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:src:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "git add --force"
    ]
  },
  "dependencies": {
    "@artsy/fresnel": "^1.2.2",
    "@formatjs/intl-pluralrules": "^1.4.1",
    "@nivo/line": "^0.61.1",
    "@the-coin/shared": "*",
    "@the-coin/utilities": "*",
    "card-validator": "^6.2.0",
    "compression": "1.7.4",
    "connected-react-router": "^6.6.1",
    "file-saver": "^2.0.2",
    "fontfaceobserver": "2.1.0",
    "intl": "^1.2.5",
    "ip": "1.1.5",
    "minimist": "1.2.0",
    "papaparse": "^5.1.1",
    "prismic-javascript": "^2.1.5",
    "prismic-reactjs": "^1.2.0",
    "query-string": "^6.9.0",
    "react-animate-height": "^2.0.18",
    "react-confetti": "^6.0.0",
    "react-ga": "^2.7.0",
    "react-helmet": "6.0.0-beta",
    "react-measure": "^2.3.0",
    "react-semantic-ui-range": "^0.7.0",
    "react-transition-group": "^4.3.0",
    "reselect": "4.0.0",
    "sanitize.css": "10.0.0",
    "ts-clipboard": "^1.0.17"
  },
  "devDependencies": {
    "@formatjs/cli": "^2.11.2",
    "@octokit/rest": "16.33.1",
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "8.0.4",
    "@types/card-validator": "^4.1.0",
    "@types/expect": "1.20.4",
    "@types/file-saver": "^2.0.1",
    "@types/fontfaceobserver": "0.0.6",
    "@types/intl": "^1.2.0",
    "@types/papaparse": "^5.0.3",
    "@types/query-string": "^6.3.0",
    "@types/react-helmet": "5.0.9",
    "@types/react-measure": "^2.0.5",
    "@types/react-test-renderer": "^16.9.0",
    "@types/react-transition-group": "^4.2.3",
    "@types/systemjs": "0.20.6",
    "@types/zxcvbn": "^4.4.0",
    "add-asset-html-webpack-plugin": "3.1.3",
    "circular-dependency-plugin": "5.0.2",
    "compare-versions": "3.5.0",
    "compression-webpack-plugin": "3.0.0",
    "coveralls": "3.0.4",
    "error-overlay-webpack-plugin": "^0.4.1",
    "esm": "3.2.25",
    "fork-ts-checker-webpack-plugin": "1.5.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "image-webpack-loader": "5.0.0",
    "imports-loader": "0.8.0",
    "jest": "*",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "ngrok": "3.2.1",
    "node-plop": "0.19.0",
    "null-loader": "3.0.0",
    "offline-plugin": "5.0.7",
    "plop": "2.4.0",
    "react-app-polyfill": "1.0.1",
    "react-test-renderer": "16.8.6",
    "semantic-ui-less": "^2.4.1",
    "shelljs": "0.8.3",
    "svg-url-loader": "3.0.0",
    "tsconfig-paths": "3.4.1",
    "whatwg-fetch": "3.0.0"
  }
}
