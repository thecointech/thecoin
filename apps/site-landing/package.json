{
  "name": "@thecointech/site-landing",
  "productName": "THECoin: Website - Landing",
  "private": true,
  "type": "module",
  "version": "0.2.90",
  "description": "THECoin: Future-proof currency",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "preanalyze": "yarn clean:analyze",
    "analyze": "node ./internals/scripts/analyze.js",
    "prebuild": "run-p build:*",
    "build": "run-env exec=webpack --config ../../libs/site-base/internal/webpack/webpack.prod.mjs --progress",
    "build:semantic": "node ./internals/buildSemantic.mjs",
    "build:i18n": "run-s extract compile",
    "build:copy": "cpx \"./src/containers/BenefitsSimulator/simulator/*.csv\" ./build/",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "clean:analyze": "rimraf stats.json",
    "deploy": "yarn run-env ./deploy.ts",
    "deploy:rebuild": "yarn build",
    "dev": "run-env internals/server.mjs --port=3000",
    "dev:live": "cross-env CONFIG_NAME=devlive yarn dev",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn dev",
    "prod:beta": "cross-env CONFIG_NAME=prodbeta yarn dev",
    "start": "firebase emulators:start --only hosting",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "pretest": "yarn clean:test",
    "test": "yarn run-jest",
    "test:ci": "yarn run-jest-nix",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "extract": "formatjs extract \"src/**/!(*.d|*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern [sha512:contenthash:base64:6]",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json && formatjs compile lang/fr.json --out-file src/translations/fr.json",
    "run_simulation": "cross-env NODE_ENV=production ts-node -T --skip-project ./internals/main_sim.ts",
    "update_snp_data": "run-env ./internals/historical/main.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:src:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "git add --force"
    ]
  },
  "dependencies": {
    "@prismicio/client": "^6.6.2",
    "@prismicio/react": "^2.4.3",
    "@thecointech/shared": "^0.2.90",
    "@thecointech/site-base": "^0.2.90",
    "@thecointech/utilities": "^0.2.90",
    "connected-react-router": "^6.6.1",
    "papaparse": "^5.1.1",
    "react-ga": "^2.7.0",
    "react-helmet": "^6.1.0",
    "react-range": "^1.8.11",
    "sanitize.css": "10.0.0"
  },
  "devDependencies": {
    "@types/papaparse": "^5.0.3",
    "@types/react-helmet": "^6.1.5",
    "@types/react-test-renderer": "^16.9.0",
    "coveralls": "3.0.4",
    "jest": "*",
    "node-plop": "0.19.0",
    "plop": "2.4.0",
    "react-app-polyfill": "1.0.1",
    "react-test-renderer": "16.8.6",
    "shelljs": "0.8.3",
    "xlsx": "^0.17.5"
  }
}
