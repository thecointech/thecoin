{
  "name": "@thecointech/site-nft",
  "productName": "THECoin: NFT",
  "private": true,
  "version": "0.2.1",
  "description": "THECoin NFT: some neat tagline",
  "repository": {
    "type": "git",
    "url": "git://github.com/thecointech/thecoin.git",
    "directory": "apps/site-nft"
  },
  "author": "Stephen Taylor",
  "license": "MIT",
  "scripts": {
    "preanalyze": "yarn clean:analyze",
    "analyze": "node ./internals/scripts/analyze.js",
    "build": "run-p build:semantic build:i18l build:copy && yarn build:src",
    "build:src": "yarn cross-env NODE_ENV=production webpack --config ../../libs/site-base/internal/webpack/webpack.prod.babel.js --color -p --progress --hide-modules --display-optimization-bailout",
    "build:semantic": "node ./internals/buildSemantic",
    "build:copy": "cpx \"./src/**/*.!(module.css.d.ts|css.d.ts|d.ts|ts|tsx|js|jsx)\" ./build && cpx \"./src/.htaccess\" ./build",
    "build:i18l": "run-s extract compile",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "clean:analyze": "rimraf stats.json",
    "predeploy": "ts-node --skip-project predeploy",
    "deploy": "firebase deploy --only hosting",
    "dev": "yarn cross-env NODE_ENV=development node internals/server --port=3002",
    "dev:live": "cross-env CONFIG_NAME=devlive yarn dev",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn start:server",
    "start": "yarn test && yarn build && yarn start:server",
    "start:server": "yarn cross-env NODE_ENV=production node ./internals/server --port=3002",
    "generate": "plop --plopfile internals/generators/index.js",
    "lint": "yarn lint:src && yarn lint:css",
    "lint:css": "stylelint './src/**/*.{js,ts}'",
    "lint:src": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:src:fix": "eslint --fix",
    "pretest": "yarn clean:test",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls",

    "extract": "formatjs extract \"src/**/!(*.test).ts*\" --out-file lang/en.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'",
    "compile": "formatjs compile lang/en.json --out-file src/translations/en.json --format ./internals/format-intl.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:src:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "git add --force"
    ]
  },
  "dependencies": {
    "@thecointech/shared": "^0.2.1",
    "@thecointech/site-base": "^0.2.1",
    "@thecointech/nft": "*"
  },
  "devDependencies": {
    "jest": "*"
  }
}
