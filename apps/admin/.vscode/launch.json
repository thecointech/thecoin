{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "port": 15454
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Electron: Main",
      "protocol": "inspector",
      "runtimeExecutable": "${admin:workspaceFolder}/node_modules/.bin/electron",
      "runtimeArgs": [
        "--remote-debugging-port=9223",
        "./app/main.dev.babel.js"
      ],
      "windows": {
        "runtimeExecutable": "${admin:workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "env": {
        "NODE_ENV": "development",
        "START_HOT": "1"
      }
    },
    {
      "name": "Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${admin:workspaceFolder}",
      "timeout": 30000
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "program": "${admin:workspaceFolder}/../../node_modules/jest/bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "jest.config.js"
      ],
      "cwd": "${admin:workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": ["Electron: Launch", "Electron: Renderer"]
    }
  ]
}
