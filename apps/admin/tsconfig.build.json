{
  "extends": "../tsconfig.apps.json",
  "compilerOptions": {
    "plugins": [
      {
        "transform": "@formatjs/ts-transformer",
        "import": "transform",
        "type": "config",
        "overrideIdFn": "[sha512:contenthash:base64:6]",
        "ast": true
      }
    ],
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./build",
    "tsBuildInfoFile": "./build/.buildinfo",
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["**/*.test.*", "**/tests/**", "**/__mocks__/**", "**/*.stories.*"],
}
