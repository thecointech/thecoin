{
  "name": "@the-coin/rates-service",
  "version": "0.1.1",
  "private": true,
  "description": "TheCoin rates service.  Publishes the official exchange rate for TheCore cryptocurrency into fiat currencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "deploy:pre": "cpx ../../yarn.lock .",
    "deploy:upload": "gcloud app deploy --project=carbon-theorem-283310",
    "deploy:clean": "del yarn.lock",
    "deploy": "yarn deploy:pre && yarn build && yarn deploy:upload && yarn deploy:clean",
    "start": "node ./build/main.js",
    "dev": "yarn build && node -r dotenv/config --inspect ./build/main.js dotenv_config_path=../../tools/debug.env",
    "build": "yarn build:clean && yarn build:api && yarn build:src",
    "build:src": "yarn tsc --build",
    "build:api": "yarn build:routes && yarn build:swagger",
    "build:routes": "yarn tsoa routes",
    "build:swagger": "yarn tsoa swagger",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build:clean": "rimraf ./build && yarn test:clean",
    "test:clean": "rimraf ./coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt",
    "test": "jest --coverage"
  },
  "engines": {
    "node": "12.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@the-coin/utilities": "latest",
    "axios": "*",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "google-auth-library": "^5.6.1",
    "googleapis": "47.0.0",
    "js-yaml": "^3.13.1",
    "node-fetch": "^2.6.0",
    "node-mailjet": "^3.3.1",
    "swagger-express-middleware": "3.0.0-alpha.5",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.0.2",
    "tsoa": "^2.5.13"
  },
  "devDependencies": {
    "@types/moment-timezone": "^0.5.12",
    "@types/node-fetch": "^2.5.5",
    "@types/swagger-express-middleware": "^1.0.10",
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*"
  }
}
