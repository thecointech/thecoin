{
  "name": "@thecointech/rates-service",
  "version": "0.1.1",
  "private": true,
  "description": "TheCoin rates service.  Publishes the official exchange rate for TheCore cryptocurrency into fiat currencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "deploy:pre": "cpx ../../yarn.lock .",
    "deploy:upload": "gcloud app deploy --project=carbon-theorem-283310",
    "deploy:clean": "del yarn.lock",
    "deploy:cron": "gcloud app deploy cron.yaml --project=carbon-theorem-283310",
    "deploy:prod:test": "gcloud config configurations activate thecointech && gcloud app deploy --project rates-service-testing && gcloud app deploy cron.yaml --project=carbon-theorem-283310",
    "deploy": "yarn deploy:pre && yarn build && yarn deploy:upload && yarn deploy:clean",
    "start": "node ./build/main.js",
    "dev": "cross-env NODE_ENV=development node --inspect=localhost:9230 -r ts-node/register ./src/main.ts",
    "dev:live": "cross-env SETTINGS=live yarn dev",
    "build": "run-s build:api build:src",
    "build:src": "yarn tsc -b tsconfig.build.json",
    "build:api": "yarn tsoa spec-and-routes",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt",
    "test": "jest --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@thecointech/utilities": "*",
    "@thecointech/logging": "*",
    "@tsoa/runtime": "^3.5.2",
    "luxon": "1.26.0",
    "axios": "*",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "node-fetch": "^2.6.0",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.5",
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*",
    "tsoa": "^3.5.2"
  }
}
