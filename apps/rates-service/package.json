{
  "name": "@thecointech/rates-service",
  "version": "0.2.7",
  "private": true,
  "description": "TheCoin rates service.  Publishes the official exchange rate for TheCore cryptocurrency into fiat currencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "start": "node ./build/main.js",
    "dev": "yarn run-env dotenv_config_path=../../environments/development.env",
    "dev:live": "yarn run-env dotenv_config_path=../../environments/devlive.env",
    "prod:test": "yarn run-env dotenv_config_path=../../environments/prodtest.env",
    "run-env": "node --inspect=9231 -r ts-node/register -r dotenv/config ./src/main.ts",
    "predeploy": "ts-node --skip-project predeploy",
    "deploy": "run-s deploy:src deploy:cron",
    "deploy:src": "gcloud app deploy",
    "deploy:cron": "gcloud app deploy cron.yaml",
    "postdeploy": "ts-node --skip-project ../../tools/removeOldAppVersions",
    "build": "yarn tsc -b tsconfig.build.json",
    "gen:swagger": "yarn tsoa spec-and-routes",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt",
    "test": "jest --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@thecointech/firestore": "^0.2.7",
    "@thecointech/logging": "^0.2.7",
    "@thecointech/utilities": "^0.2.7",
    "@tsoa/runtime": "^3.5.2",
    "axios": "*",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "luxon": "1.26.0",
    "node-fetch": "^2.6.0",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.5",
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*",
    "tsoa": "^3.5.2"
  }
}
