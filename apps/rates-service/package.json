{
  "name": "@thecointech/rates-service",
  "version": "0.2.81",
  "private": true,
  "description": "TheCoin rates service.  Publishes the official exchange rate for TheCore cryptocurrency into fiat currencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "start": "node ./build/main.js",
    "dev": "cross-env TS_NODE_PROJECT=../../tsconfig.dev.json node --inspect=9231 -r ts-node/register -r ./src/main.ts",
    "dev:live": "cross-env CONFIG_NAME=devlive yarn dev",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn dev",
    "deploy": "ts-node --skip-project deploy",
    "build": "yarn tsc -b tsconfig.build.json",
    "gen:swagger": "yarn tsoa spec-and-routes",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./build",
    "clean:test": "rimraf ./coverage",
    "test:summary": "jest --coverage > ./coverage/summary.txt",
    "test": "jest --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@google-cloud/firestore": "4.12.3",
    "@thecointech/async": "^0.2.81",
    "@thecointech/email": "^0.2.81",
    "@thecointech/firestore": "^0.2.81",
    "@thecointech/fx-rates": "^0.2.81",
    "@thecointech/logging": "^0.2.81",
    "@thecointech/market-status": "^0.2.81",
    "@thecointech/utilities": "^0.2.81",
    "@tsoa/runtime": "^3.8.0",
    "axios": "0.21.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "js-yaml": "^3.13.1",
    "luxon": "1.26.0",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.2.0"
  },
  "devDependencies": {
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*",
    "tsoa": "^3.8.0"
  }
}
