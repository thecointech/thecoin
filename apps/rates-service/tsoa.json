{
  "entryFile": "./src/main.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": [
    "./src/controllers/**/*controller.ts"
  ],

  "spec": {
    "basePath": "/api/v1",
    "specVersion": 3,
    "outputDirectory": "./src/api"
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "./src/routes",
    "middleware": "express"
  },
  "ignore": [
    "**/node_modules/**",
    "**/build/**"
  ],
  "compilerOptions": {
    "paths": {
      "@thecointech/fx-rates":  ["../../libs/fx-rates/src"]
    }
  }
}
