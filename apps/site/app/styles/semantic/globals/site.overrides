#footer{
  position: fixed;
  bottom: 0;
  background-color:#f4f4f4;
  color:rgb(154, 161, 155);
  padding: 0px;
  width: 100%;
}

#backgroundDecor{
  height: 100%;
  width: 550px;
  z-index: -100;
  position: fixed;
  right: 0;
  top: 10px;
  background-image: linear-gradient(transparent, #3193A1);
  /*transform: skewX(-55deg);
  transform-origin: top right;*/
  border-radius: 100% 0% 0% 100%; 
}

