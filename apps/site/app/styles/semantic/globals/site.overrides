.wrapper {
}
.icons {
  max-width: 70%;
}
.h1 {
  font-weight: 300;
  font-size: 3rem;
  color: #002c8e;
  line-height: 3rem;
  margin-top: 20px;
}
.h2 {
  font-weight: 300;
  font-size: 1.6rem;
  color: #002c8e;
  line-height: 3rem;
