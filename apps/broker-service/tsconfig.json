{
  "extends": "../tsconfig.apps.json",
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "outDir": "../../build/broker-service",   /* Redirect output structure to the directory. */
    "rootDir": "./src",                         /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
    "baseUrl": "./src/",                       /* Base directory to resolve non-absolute module names. */
    "tsBuildInfoFile": "../../build/_obj/broker-service.buildinfo",          /* Specify file to store incremental compilation information */
    /* Required for TSOA */
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "noImplicitUseStrict": true,
  },
  "include": [
    "./src/**/*.*"
  ],
  "references": [{ "path": "../../libs/utils-ts/", "prepend": false }]
}
