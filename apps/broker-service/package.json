{
  "name": "@thecointech/broker-service",
  "version": "0.2.76",
  "private": true,
  "description": "TheCoin simple broker services.  This sample API is an example of how to setup the simplest low-volume exchange, when combined with the included server code, without external dependencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "start": "node ./build/main.js",
    "dev": "cross-env TS_NODE_PROJECT=../../tsconfig.dev.json node --inspect=9232 -r ts-node/register -r ./src/main.ts",
    "dev:live": "cross-env CONFIG_NAME=devlive yarn dev",
    "prod:test": "cross-env CONFIG_NAME=prodtest yarn dev",
    "deploy": "ts-node --skip-project deploy",
    "build": "yarn tsc -b tsconfig.build.json",
    "gen:swagger": "yarn tsoa spec-and-routes",
    "clean": "rimraf ./build && rimraf ./src/api",
    "test": "yarn jest",
    "test:coverage": "yarn test --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@google-cloud/firestore": "4.12.3",
    "@thecointech/contract-core": "^0.2.76",
    "@thecointech/email": "^0.2.76",
    "@thecointech/logging": "^0.2.76",
    "@thecointech/pricing": "^0.2.76",
    "@thecointech/signers": "^0.2.76",
    "@thecointech/tx-bill": "^0.2.76",
    "@thecointech/tx-etransfer": "^0.2.76",
    "@thecointech/utilities": "^0.2.76",
    "@tsoa/runtime": "^3.8.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "googleapis": "49.0.0",
    "luxon": "1.26.0",
    "openapi-types": "^7.2.3",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*",
    "tsoa": "^3.8.0"
  }
}
