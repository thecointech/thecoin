{
  "name": "@the-coin/broker-service",
  "version": "0.1.1",
  "private": true,
  "description": "TheCoin simple broker services.  This sample API is an example of how to setup the simplest low-volume exchange, when combined with the included server code, without external dependencies",
  "keywords": [
    "TheCoin",
    "ethereum"
  ],
  "author": "Stephen Taylor <stephen@thecoin.io>",
  "homepage": "http://thecoin.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecointech/thecoin.git",
    "directory": "apps/rates-service"
  },
  "scripts": {
    "start": "node ./build/main.js",
    "dev": "cross-env NODE_ENV=development && node --inspect -r ts-node/register ./src/main.ts",
    "dev:live": "cross-env SETTINGS=live && yarn dev",
    "build": "run-s build:api build:src",
    "build:src": "yarn tsc -b tsconfig.build.json",
    "build:api": "yarn tsoa spec-and-routes",
    "clean": "rimraf ./build && rimraf ./src/api",
    "test": "yarn jest --runInBand",
    "test:coverage": "yarn test --coverage"
  },
  "engines": {
    "node": "14.x.x"
  },
  "files": [
    "build/**/*"
  ],
  "main": "./build/main.js",
  "dependencies": {
    "@the-coin/utilities": "*",
    "@the-coin/email": "*",
    "@the-coin/logging": "*",
    "cors": "^2.8.5",
    "luxon": "*",
    "express": "^4.16.4",
    "google-auth-library": "^5.6.1",
    "googleapis": "47.0.0",
    "swagger-express-middleware": "3.0.0-alpha.5",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.0.2",
    "tsoa": "^3.5.2"
  },
  "devDependencies": {
    "@types/swagger-express-middleware": "^1.0.10",
    "@types/swagger-ui-express": "^4.1.1",
    "@types/cors": "^2.8.10",
    "jest": "*"
  }
}
