{
  "name": "@the-coin/broker-service",
  "version": "0.1.0",
  "description": "TheCoin simple broker services.  This sample API is an example of how to setup the simplest low-volume exchange, when combined with the included server code, without external dependencies",
  "main": "src/main.ts",
  "scripts": {
    "start": "node ../../build/broker-service/main.js",
    "dev": "cross-env NODE_ENV=development && yarn build && node --inspect ../../build/broker-service/main.js",
    "build": "yarn build:api && yarn build:src && yarn build:copy",
    "build:src": "yarn tsc  --build",
    "build:api": "yarn build:routes && yarn build:swagger",
    "build:routes": "yarn tsoa routes",
    "build:swagger": "yarn tsoa swagger",
    "build:copy": "cpx \"src/api/*.*\" \"../../build/broker-service/api\"",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "yarn jest"
  },
  "license": "Unlicense",
  "private": true,
  "dependencies": {
    "@google-cloud/firestore": "^2.4.0",
    "cors": "^2.8.5",
    "ethers": "^4.0.46",
    "express": "^4.16.4",
    "google-auth-library": "^5.6.1",
    "googleapis": "47.0.0",
    "node-mailjet": "^3.3.1",
    "swagger-express-middleware": "3.0.0-alpha.5",
    "swagger-tools": "^0.10.4",
    "swagger-ui-express": "^4.0.2",
    "tsoa": "^2.5.13"
  },
  "devDependencies": {
    "@firebase/testing": "^0.16.14",
    "@types/node-mailjet": "^3.3.1",
    "@types/swagger-express-middleware": "^1.0.10",
    "@types/swagger-ui-express": "^4.1.1",
    "jest": "*"
  },
  "eslintConfig": {
    "env": {
      "node": true
    }
  }
}
