{
  "entryFile": "./src/main.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": [
    "./src/controllers/**/*controller.ts"
  ],

  "spec": {
    "basePath": "/api/v1",
    "specVersion": 2,
    "outputDirectory": "./src/api"
  },
  "routes": {
    "basePath": "/api/v1",
    "routesDir": "./src/routes",
    "middleware": "express"
  },
  "ignore": [
    "**/node_modules/**"
  ],
  "compilerOptions": {
    "paths": {
      "@thecointech/broker-db/*":  ["../../libs/broker-db/src/*"]
    }
  }
}
