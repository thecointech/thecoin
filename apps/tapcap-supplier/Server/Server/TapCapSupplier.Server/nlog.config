<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="c:\temp\internal-nlog.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!-- write logs to file  -->
		<target xsi:type="File" name="infoFile" fileName="logs/${shortdate}.log"
			layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="File" name="allfile" fileName="logs/${shortdate} - Trace.log"
			layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="File" name="errorfile" fileName="logs/${shortdate} - Errors.log"
			layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

		<target xsi:type="ColoredConsole" name="toConsole" layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="Microsoft.*" maxLevel="Debug" final="true" />
		<logger name="*" minlevel="Trace" writeTo="allfile" />
		<logger name="Microsoft.*" maxLevel="Info" final="true" />
		<logger name="*" minlevel="Info" writeTo="infoFile" />
		<logger name="*" minlevel="Warn" writeTo="errorFile" />

		<logger name="*" minlevel="Info" writeTo="toConsole" />

	</rules>
</nlog>
